<div id="<%= dom_id question %>">

  <p class="my-5">
    <strong class="block font-medium mb-1">Content:</strong>
    <%= question.content %> (<%= question.points %>)
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Era:</strong>
    <%= question.era %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this question", quiz_question_path(@quiz, question), class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Edit this question", edit_quiz_question_path(@quiz, question), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
