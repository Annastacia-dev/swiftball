<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Questions</h1>
    <%= link_to "New question", new_quiz_question_path(@quiz), class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <div id="questions" class="min-w-full">
    <% @questions_by_era.each do |era, questions| %>
      <h2>Era: <%= era %></h2>
      <ul class="mb-5">
        <% questions.each do |question| %>
          <li>
            <%= link_to quiz_question_path(@quiz, question) do %>
              <%= question.content %>(worth <%= question.points %> points)
            <% end %>
          </li>
        <% end %>
      </ul>
    <% end %>
  </div>
</div>
