<div class="pt-10 px-12 min-h-screen flex flex-col gap-5">

  <% breadcrumbs = [
    { text: 'home', path: root_path },
  ] %>

  <% if current_user.admin? %>
    <% breadcrumbs << { text: 'Users', path: users_path} %>
    <% breadcrumbs << { text: "#{@user.username}'s Stats"} %>
  <% else %>
    <% breadcrumbs << { text: 'My Stats'} %>
  <% end %>

  <%= render 'components/breadcrumb', breadcrumbs: breadcrumbs %>

  <div class="flex flex-col">
    <h5 class="uppercase font-bold flex gap-3">
      <i class="fa-solid fa-chart-simple"></i>
      Statisctics
    </h5>
    <hr class="my-1" />
    <div class="grid grid-cols-6 lg:gap-3 gap-12 lg:mt-10 mt-4">
      <div class="flex flex-col gap-2 items-center">
        <p class="lg:text-7xl font-bold"><%= @attempts.size %></p>
        <p class="lg:text-sm text-xs lg:uppercase capitalize">played</p>
      </div>

      <div class="flex flex-col gap-2 items-center">
        <p class="lg:text-7xl font-bold"><%= @current_streak %></p>
        <p class="lg:text-sm text-xs lg:uppercase capitalize">current streak</p>
      </div>

      <div class="flex flex-col gap-2 items-center">
        <p class="lg:text-7xl font-bold"><%= @max_streak %></p>
        <p class="lg:text-sm text-xs lg:uppercase capitalize">max streak</p>
      </div>

      <div class="flex flex-col gap-2 items-center">
        <p class="lg:text-7xl font-bold"><%= @average_score %></p>
        <p class="lg:text-sm text-xs lg:uppercase capitalize">average score</p>
      </div>

      <div class="flex flex-col gap-2 items-center">
        <p class="lg:text-7xl font-bold"><%= @average_position %></p>
        <p class="lg:text-sm text-xs lg:uppercase capitalize">average position</p>
      </div>

    </div>
  </div>

  <div class="flex flex-col lg:mt-20 mt-5">
    <h5 class="uppercase font-bold flex gap-3">
      <i class="fa-solid fa-chart-pie"></i>
      eras distibution
    </h5>
    <hr class="my-1" />
  </div>
</div>