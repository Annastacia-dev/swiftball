<%= form_with(model: [@album, @song], class: "contents") do |form| %>
  <div class="flex flex-col gap-5 lg:w-1/2 my-5">
    <div class="flex flex-col gap-1">
      <%= form.label :title %>
      <%= form.text_field :title, class: "border border-gray-200 outline-none px-3 py-2 bg-transparent w-full ", required: true %>
    </div>

    <div class="flex gap-5">
      <%= form.submit class: "rounded py-2 px-4 bg-black/95 dark:bg-gray-50 dark:text-black dark:   font-medium cursor-pointer" %>
    </div>
  </div>
<% end %>