<%= form_with(model: setlist, class: "contents") do |form| %>
  <%= render 'shared/errors', object: setlist %>

  <div class="flex flex-col gap-5 lg:w-1/2 my-5">
    <div class="flex flex-col gap-1">
      <%= form.label :league %>
      <%= form.text_field :league, class: "border border-gray-200 outline-none px-3 py-2 bg-transparent w-full", required: true %>
    </div>

    <div class="flex flex-col gap-1">
      <%= form.label :status %>
      <%= form.select :status, Setlist.status_options, {}, class: "border border-gray-200 outline-none px-3 py-2  w-full dark:bg-black" %>
    </div>

  </div>

  <div class="inline">
    <%= form.submit class: "rounded py-2 px-4 dark:bg-black bg-gray-200 font-medium cursor-pointer" %>
  </div>
<% end %>
