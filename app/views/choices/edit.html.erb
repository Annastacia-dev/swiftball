<div class="pt-10 px-12 min-h-screen">

  <%= render 'components/breadcrumb', breadcrumbs: [
    { text: 'quizzes', path: root_path },
    { text: "#{@choice.question.quiz.tour.title}", path: tour_path(@choice.question.quiz.tour)},
    { text: "#{@choice.question.quiz.tour.title} Quiz", path: quiz_path(@choice.question.quiz)},
    { text: "Questions", path: quiz_questions_path(@choice.question.quiz)},
    { text: "#{@choice.question.content}", path: quiz_question_path(@choice.question.quiz, @choice.question)},
    { text: "Choices", path: quiz_question_choices_path(@choice.question.quiz, @choice.question)},
    { text: "#{@choice.content}", path: quiz_question_choice_path(@choice.question.quiz, @choice.question, @choice)},
    { text: "Edit"},
  ] %>

  <h1 class="font-semibold text-xl font-courier capitalize">Editing choice</h1>

  <%= render "form", choice: @choice %>

</div>
