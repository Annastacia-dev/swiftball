<%= form_with(model: [@quiz, @question, choice], class: "contents") do |form| %>
  <% if choice.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(choice.errors.count, "error") %> prohibited this choice from being saved:</h2>

      <ul>
        <% choice.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="flex flex-col gap-5 lg:w-1/2 my-5">

    <div class="flex flex-col gap-1">
      <%= form.label :image %>
      <%= form.file_field :image, class: "border border-gray-200 outline-none px-3 py-2 bg-transparent w-full" %>
    </div>

    <div class="flex flex-col gap-1">
      <%= form.label :content %>
      <%= form.text_field :content, class: "border border-gray-200 outline-none px-3 py-2 bg-transparent w-full", required: true %>
    </div>

    <div class="flex items-center gap-2">
      <%= form.check_box :correct, class: "h-8 w-8" %>
      <%= form.label :correct %>
    </div>

    <div class="flex gap-5">
      <%= form.submit class: "rounded py-2 px-4 bg-black text-white  font-medium cursor-pointer" %>
      <%= form.submit 'Create Choice & Add Another', class: "rounded py-2 px-4 border border-black text-black  font-medium cursor-pointer hover:bg-gray-200" %>
    </div>

  </div>
<% end %>
