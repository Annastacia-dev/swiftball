<div class="pt-10 lg:px-12 px-5 flex flex-col gap-5 min-h-screen">

  <%= render 'components/breadcrumb', breadcrumbs: [
    { text: 'home', path: tours_path },
    { text: 'edit profile'}
  ] %>

  <div class="flex justify-between">
    <h2 class="font-semibold text-xl font-courier capitalize">Edit profile</h2>
  </div>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "flex flex-col gap-3"}) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="lg:grid lg:grid-cols-2 gap-5 text-sm mt-5 lg:w-3/4">
        <div class="flex flex-col gap-1">
          <%= f.label :name %>
          <%= f.text_field :name, autofocus: true, class: 'bg-transparent' %>
        </div>

        <div class="flex flex-col gap-1">
          <%= f.label :username %>
          <%= f.text_field :username, autofocus: true, class: 'bg-transparent' %>
        </div>

        <div class="flex flex-col gap-1">
          <%= f.label :country %>
          <%= f.select :country, options_for_select(@country_options_for_select, @user.country), {}, class: "", required: true, class: "dark:bg-black" %>
        </div>

        <div class="flex flex-col gap-1">
          <%= f.label :timezone %>
          <%= f.select :timezone, @timezones, {}, required: true, class: "dark:bg-black" %>
        </div>
    </div>
    <div class="flex flex-col">
      <%= f.submit "Update", class: "px-4 py-2 dark:bg-black bg-gray-200  mt-4 rounded lg:w-40 cursor-pointer" %>
    </div>
  <% end %>
</div>
