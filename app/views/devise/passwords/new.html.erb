<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'bg-center bg-cover bg-no-repeat min-h-screen', style: "background-image: url('#{image_path('background.png')}')" }) do |f| %>
    <div class="bg-black/90 min-h-screen w-full lg:grid lg:grid-cols-3 gap-5 flex flex-col justify-center items-center  font-roboto font-light lg:pt-0 pt-10">

    <%= render 'shared/logo' %>

      <div class="flex flex-col  gap-8 lg:border-l lg:border-gray-100 py-5 lg:px-20 px-5 lg:col-span-2 lg:ml-20 text-sm lg:w-1/2 w-11/12">
        <h2 class="text-lg uppercase font-bold">Forgot your password?</h2>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="flex flex-col gap-1">
          <%= f.label :email %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "bg-transparent" %>
        </div>

        <div class="actions">
          <%= f.submit "Send me reset password instructions",  class: 'px-4 py-2 bg-white  rounded font-semibold  w-full cursor-pointer text-black' %>
        </div>

        <%= render "devise/shared/links" %>

      </div>
    </div>
  <% end %>


