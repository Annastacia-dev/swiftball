<%= form_with(model: tour, class: "contents") do |form| %>
  <% if tour.errors.any? %>
    <%= render 'shared/errors', object: tour %>
  <% end %>

  <div class="grid lg:grid-cols-2 gap-x-10 gap-y-5 lg:w-3/4 my-5">

    <% if action_name == 'edit' %>
      <div class="flex flex-col gap-1">
        <%= form.label :number %>
        <%= form.number_field :number, class: "border border-gray-200 outline-none px-3 py-2 bg-transparent w-full" %>
      </div>
    <% end %>

    <div class="flex flex-col gap-1">
      <%= form.label :title %>
      <%= form.text_field :title, class: "border border-gray-200 outline-none px-3 py-2 bg-transparent w-full", required: true %>
    </div>

    <div class="flex flex-col gap-1">
      <%= form.label :start_time, 'Date/Start Time' %>
      <%= form.datetime_field :start_time, class: "border border-gray-200 outline-none px-3 py-2 bg-transparent w-full", required: true %>
    </div>

    <div class="flex flex-col gap-1">
      <%= form.label :city_image %>
      <%= form.file_field :city_image, class: "border border-gray-200 outline-none px-3 py-2 bg-transparent w-full" %>
    </div>

    <div class="flex flex-col gap-1 capitalize">
      <%= form.label :opener_ids, "Openers" %>
      <%= form.collection_select :opener_ids, Opener.all, :id, :name, {}, { multiple: true, class: 'capitalize' } %>
    </div>

    <% if action_name == 'edit' %>
      <div class="flex flex-col gap-1">
        <%= form.label :era_order %>
        <%= form.select :era_order, Tour.era_order_options, {}, required: true, class: "dark:bg-black" %>
      </div>

      <div class="flex flex-col gap-1">
        <%= form.label :status %>
        <%= form.select :status, Tour.status_options, {}, required: true, class: "dark:bg-black" %>
      </div>

      <div class="flex items-center gap-2">
        <%= form.check_box :preapp, class: "h-8 w-8" %>
        <%= form.label :preapp %>
      </div>
    <% end %>
  </div>

  <div class="inline">
    <%= form.submit class: "rounded py-2 px-4 dark:bg-black bg-gray-200 font-medium cursor-pointer" %>
  </div>
<% end %>
