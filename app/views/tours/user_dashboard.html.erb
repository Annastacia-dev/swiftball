<div class="pt-10 lg:px-12 px-5 min-h-screen">
  <div class="grid lg:grid-cols-4 grid-cols-2 lg:gap-10 gap-4">
    <%= link_to attempts_path, class: "bg-gray-200 dark:bg-black/50 shadow-lg p-5 rounded flex flex-col gap-1 items-center"  do %>
      <h5 class="lg:text-6xl text-3xl font-courier font-bold"><%= @attempts.size %></h5>
      <h5 class="lg:text-xl text-xs  font-bold uppercase">attempts</h5>
    <% end %>

    <%= link_to tracker_outfits_path, class: "bg-gray-200 dark:bg-black/50 shadow-lg p-5 rounded flex flex-col gap-2 items-center"  do %>
      <i class="fa-solid fa-wand-magic-sparkles lg:text-6xl text-3xl"></i>
      <h5 class="lg:text-xl text-xs  font-bold uppercase">outfits tracker</h5>
    <% end %>
  </div>

  <%= render 'index' %>
</div>
