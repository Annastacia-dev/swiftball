<div class="lg:pt-32 pt-24 lg:px-12 px-5 pb-20 min-h-screen flex flex-col">

  <%= render 'components/breadcrumb', breadcrumbs: [
    { text: 'home', path: root_path },
    { text: "users" },
  ]
  %>

  <%= form_with url: users_path, method: :get, local: true, class: 'flex gap-4 items-center' do |form| %>
    <%= form.text_field :query, placeholder: "Search by name, username, or email...",
                        class: "w-full px-3 py-2 border rounded text-xs bg-gray-50 dark:bg-black/50" %>
    <button type='submit' class="py-2 px-2 flex items-center gap-2 capitalize bg-black  dark:bg-gray-50 dark:text-black text-white rounded">
      <i class="fa-solid fa-magnifying-glass"></i>
    </button>

    <%= link_to users_path, class:"py-2 px-2 flex items-center gap-2 capitalize bg-black  dark:bg-gray-50 dark:text-black text-white rounded" do %>
      <i class="fa-solid fa-rotate-right"></i>
    <% end %>
  <% end %>

  <div class="flex flex-col gap-5 mt-8">
    <h5 class="font-semibold font-courier uppercase text-md ">users (<%= @users.size %>) </h5>
  </div>

  <div class="flex flex-col gap-5 mt-8">
    <%= render 'table', users: @users %>
  </div>


  <div class="flex justify-end mt-3 overflow-x-scroll">
    <%= will_paginate @users %>
  </div>

  <%= render 'users_chart' %>
</div>


