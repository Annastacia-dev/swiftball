<div class="flex flex-col mt-10 overflow-x-scroll lg:text-base text-xs">
  <table class="min-w-full divide-y divide-gray-200">

    <thead class="dark:bg-black/10 bg-gray-50">
      <tr>
        <th scope="col" class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider">
          #
        </th>
        <th scope="col" class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider">
          name
        </th>
        <th scope="col" class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider">
          email
        </th>
        <th scope="col" class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider">
          username
        </th>
        <th scope="col" class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider">
          country
        </th>
        <th scope="col" class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider">
          timezone
        </th>
      </tr>
    </thead>

    <tbody class="divide-y divide-gray-200">
      <% users.each_with_index do |user, index| %>
        <tr>
          <td class="px-6 py-4 whitespace-nowrap text-sm">
            <%= (index + 1).to_s.rjust(2, '0') %>.
          </td>
          <td class="px-6 py-4 whitespace-nowrap text-sm capitalize hover:underline">
            <%= link_to user.name, stats_path(user) %>
          </td>
          <td class="px-6 py-4 whitespace-nowrap text-sm lowercase">
            <%= user.email %>
          </td>
          <td class="px-6 py-4 whitespace-nowrap text-sm lowercase">
            @<%= user.username %>
          </td>
          <td class="px-6 py-4 whitespace-nowrap text-sm capitalize">
            <%= user.country %>
          </td>
          <td class="px-6 py-4 whitespace-nowrap text-sm capitalize">
            <%= user.timezone %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>